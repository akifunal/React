{
	"extends": ["stylelint-config-recommended-scss"],
	"plugins": ["stylelint-order", "stylelint-scss"],
	"rules": {
		"indentation": "tab",
		"number-leading-zero": null,
		"order/properties-alphabetical-order": true,

		"scss/at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"extends",
					"tailwind",
					"apply",
					"variants",
					"responsive",
					"screen"
				]
			}
		]
	}
}
