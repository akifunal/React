{
	"compilerOptions": {
		"checkJs": true,
		"jsx": "preserve",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@hooks/*": ["hooks/*"],
			"@helper/*": ["helpers/*"],

			"@App/*": ["components/App/*"],
			"@InputWithLabel/*": ["components/InputWithLabel/*"],
			"@SearchForm/*": ["components/SearchForm/*"],
			"@List/*": ["components/List/*"],
			"@Item/*": ["components/List/Item/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
